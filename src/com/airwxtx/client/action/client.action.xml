<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<package name="client" namespace="/client" extends="airwxtx-default">
		<action name="*Action" class="clientAction" method="{1}">
			<result name="input">/WEB-INF/pages/client/saveClient.jsp</result>
			<result name="error">/WEB-INF/pages/client/error.jsp</result>
			<result>/WEB-INF/pages/client/success.jsp</result>
			<result name="details">/WEB-INF/pages/client/clientDetails.jsp</result>
			<result name="allClients">/WEB-INF/pages/client/listAllClients.jsp</result>
			<allowed-methods>preSaveClient,saveClient,updateClient,listAllClients,showClientDetails</allowed-methods>
		</action>
	</package>
</struts>