<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<package name="user" namespace="/user" extends="airwxtx-default">
		<action name="*Action" class="userAction" method="{1}">
			<result>/WEB-INF/pages/client/success.jsp</result>
			<result name="input">/WEB-INF/pages/user/saveUser.jsp</result>
			<result name="list">/WEB-INF/pages/user/listUser.jsp</result>
			<allowed-methods>searchUser</allowed-methods>
		</action>
	</package>
</struts>